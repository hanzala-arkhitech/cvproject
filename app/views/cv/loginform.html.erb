


<form method="POST" action="loginUser" class="container mt-4">
<h1 class="text-center"> Login </h1>
  <div class="mb-3">
    <label for="loginEmail" class="form-label">Email address</label>
    <input name="loginEmail" type="email" class="form-control" id="loginEmail" required>
  </div>
  <div class="mb-3">
    <label for="loginPwd" class="form-label">Password</label>
    <input name="loginPwd" type="password" class="form-control" id="loginPwd" required>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
  <%= link_to "Don't Have an Account? Signup Here.", signupform_path%>
</form>


<% if flash[:error]%>
<div id="error" class="alert alert-danger text-center text-red mt-2">
   <p> <%= flash[:error] %></p>
</div>
<% end %>




<script>
setTimeout(() => {
  error = document.getElementById("error");
  error.classList.add("d-none")
}, 2000);
</script>